# =============================================================================
# JobPortal Docker Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Place this .env file in the docker/ directory when running docker-compose

# =============================================================================
# MONGODB CONFIGURATION (REQUIRED)
# =============================================================================
# MongoDB Atlas connection string or local MongoDB URI
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
DATABASE_NAME=jobportal

# =============================================================================
# JWT AUTHENTICATION (REQUIRED)
# =============================================================================
# Generate a secure secret key: openssl rand -hex 32
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# AI PROVIDER CONFIGURATION (REQUIRED FOR AI FEATURES)
# =============================================================================
# Primary AI Provider: "openai" or "anthropic"
AI_PROVIDER=openai
AI_FALLBACK_ENABLED=true

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Anthropic Configuration (Optional - for fallback)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =============================================================================
# N8N WORKFLOW AUTOMATION (OPTIONAL)
# =============================================================================
N8N_BASE_URL=http://localhost:5678
N8N_API_KEY=

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL - FOR NOTIFICATIONS)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@jobportal.com
SMTP_FROM_NAME=JobPortal

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=JobPortal
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
UVICORN_LOG_LEVEL=info

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_AUTH_PER_MINUTE=5
RATE_LIMIT_JOB_POSTING_PER_MINUTE=10
RATE_LIMIT_APPLICATION_PER_MINUTE=20
RATE_LIMIT_AI_PER_MINUTE=30

# =============================================================================
# FILE UPLOAD
# =============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,doc,docx

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API URL for frontend (use http://backend:8000 for Docker internal communication)
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================================================
# OPTIONAL: LOCAL MONGODB (if not using MongoDB Atlas)
# =============================================================================
# Uncomment these if using local MongoDB container
# MONGO_ROOT_USERNAME=admin
# MONGO_ROOT_PASSWORD=password


